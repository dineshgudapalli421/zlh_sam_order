<core:FragmentDefinition 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form">
	<Dialog id="fileUploadDialog" title="Attachments" class="sapUiSmallMargin" afterClose=".closeDialog">
		<content>
		  <form:SimpleForm editable="true" id="idUploadFile">
				
	<l:VerticalLayout>
		<u:FileUploader
			id="fileUploader"
			name="myFileUpload"
			uploadUrl="upload/"
			tooltip="Upload your file to the local server"
			uploadComplete="handleUploadComplete"/>
		<Button
			text="Upload File"
			press="handleUploadPress"/>
	</l:VerticalLayout>				
		  </form:SimpleForm>
		</content>
        <buttons>
		<Button id="btnCancelFile" text="Cancel" press=".onCancelFileUpload" />
		</buttons>
	  </Dialog>
</core:FragmentDefinition>